{
  "scripts": {
    "postinstall": "husky install && chmod +x .husky/_/husky.sh"
  },
  "lint-staged": {
    "moa/**/*.{js,jsx,ts,tsx}": [
      "cd moa && eslint --fix",
      "cd moa && prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jira-prepare-commit-msg": "^1.7.2",
    "lint-staged": "^16.2.4"
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "[$J] $M",
    "allowEmptyCommitMessage": false,
    "ignoredBranchesPattern": "^(master|main|dev|develop|development|release)$"
  }
}
